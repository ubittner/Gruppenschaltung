{
  "elements": [
    {
      "type": "ExpansionPanel",
      "caption": "Funktion",
      "items": [
        {
          "type": "CheckBox",
          "name": "MaintenanceMode",
          "caption": "Wartungsmodus"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Gruppe",
      "items": [
        {
          "type": "List",
          "name": "Variables",
          "rowCount": 5,
          "add": true,
          "delete": true,
          "columns": [
            {
              "caption": "Aktiviert",
              "name": "Use",
              "width": "100px",
              "add": true,
              "edit": {
                "type": "CheckBox"
              }
            },
            {
              "caption": "Variable",
              "name": "ID",
              "width": "500px",
              "add": 0,
              "edit": {
                "type": "SelectVariable"
              }
            },
            {
              "caption": "Bezeichnung",
              "name": "Description",
              "width": "300px",
              "add": "",
              "edit": {
                "type": "ValidationTextBox"
              }
            },
            {
              "caption": "Schaltverzögerung",
              "name": "SwitchingDelay",
              "width": "180px",
              "add": 0,
              "edit": {
                "type": "NumberSpinner",
                "suffix": " Millisekunden",
                "minimum": 0,
                "maximum": 5000
              }
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "ExpansionPanel",
      "caption": "Konfiguration",
      "items": [
        {
          "type": "Button",
          "caption": "Neu einlesen",
          "onClick": "GS_ReloadConfiguration($id);"
        },
        {
          "type": "RowLayout",
          "items": [
            {
              "type": "SelectCategory",
              "name": "BackupCategory",
              "caption": "Kategorie",
              "width": "600px"
            },
            {
              "type": "Label",
              "caption": " "
            },
            {
              "type": "Button",
              "caption": "Sichern",
              "onClick": "GS_CreateBackup($id, $BackupCategory);"
            }
          ]
        },
        {
          "type": "RowLayout",
          "items": [
            {
              "type": "SelectScript",
              "name": "ConfigurationScript",
              "caption": "Konfiguration",
              "width": "600px"
            },
            {
              "type": "Label",
              "caption": " "
            },
            {
              "type": "PopupButton",
              "caption": "Wiederherstellen",
              "popup": {
                "caption": "Konfiguration wirklich wiederherstellen?",
                "items": [
                  {
                    "type": "Button",
                    "caption": "Wiederherstellen",
                    "onClick": "GS_RestoreConfiguration($id, $ConfigurationScript);"
                  }
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Registrierte Nachrichten",
      "items": [
        {
          "type": "List",
          "name": "RegisteredMessages",
          "rowCount": 11,
          "sort": {
            "column": "SenderID",
            "direction": "ascending"
          },
          "columns": [
            {
              "caption": "Sender ID",
              "name": "SenderID",
              "width": "150px"
            },
            {
              "caption": "Sender Name",
              "name": "SenderName",
              "width": "450px"
            },
            {
              "caption": "Nachrichten ID",
              "name": "MessageID",
              "width": "150px"
            },
            {
              "caption": "Nachrichten Bezeichnung",
              "name": "MessageDescription",
              "width": "250px"
            }
          ]
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Schaltfunktion",
      "items": [
        {
          "type": "TestCenter"
        }
      ]
    }
  ],
